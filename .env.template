# Server
PORT=3000
HOST=127.0.0.1

# Storage
DATABASE_FILE=./data/db.json

# Chain configuration
# CHAIN_MODE can be 'simulated' (default) or 'sepolia'
CHAIN_MODE=simulated
# Required when CHAIN_MODE=sepolia
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/<your-project-id>

# Security
# Change this to a strong secret in any real deployment
KEY_ENCRYPTION_SECRET=change-me-in-production

# Development
# Set to any value to suppress startup logs (used in tests)
SUPPRESS_LOGS=
